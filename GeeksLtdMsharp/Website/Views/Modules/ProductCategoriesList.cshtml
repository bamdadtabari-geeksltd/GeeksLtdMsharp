@model ViewModel.ProductCategoriesList

<!-- Modules\ProductCategory\ProductCategoriesList.cs:8 -->
<form data-module="ProductCategoriesList" method="post" action="@Url.Current()">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <input type="hidden" name="Current-Sort" id="Current-Sort" value="@Model.Sort" />
   <div class="buttons-row top-buttons-row">
      <div class="buttons">
         <a name="NewProductCategory" class="btn btn-secondary" href='@Url.Index("ProductCategoryEnter")' target="$modal" data-modal-options='{"width": "1000px","height": "1000px"}'><i class="fas fa-plus"></i>
            New Product Category</a>
      </div>
   </div>
   <input type="hidden" name="pcl.s" id="pcl.s" value="@Model.Sort" />
   <h2>Product Category</h2>
   <div class="search">
      <div class="form-group row">
         <label for="pcl.FullSearch" class="control-label">
            Find
         </label>
         <div class="group-control">
            <input type="text" asp-for="FullSearch" asp-prefix="pcl" class="form-control" placeholder="Search..." />
         </div>
      </div>
      <div class="buttons-row">
         <div class="buttons">
            <button type="submit" name="Search" class="btn btn-primary" formaction='@Url.ActionWithQuery("ProductCategoriesList/Search")' default-button="true">Search</button>
         </div>
      </div>
   </div>
   @if (Model.Items.Any())
   {
   <text>
      <div class="grid-wrapper">
         <table class="grid">
            <thead>
               <tr>
                  <th class='row-index-col'></th>
                  <th data-sort="Name"><a title="Sort by &lt;strong&gt; this the name &lt;/strong&gt;" aria-label="Sort by &lt;strong&gt; this the name &lt;/strong&gt;" href="#" data-sort="pcl.s=Name" formaction="@Model.Sort.Url("Name")"><strong>
                           this the name
                        </strong></a></th>
                  <th class="actions"></th>
                  <th class="actions">Actions</th>
               </tr>
            </thead>
            <tbody>
               @foreach (var listItem in Model.Items)
               {
               var item = listItem.Item;
               ViewData.TemplateInfo.HtmlFieldPrefix = "Item-" + item.ID;
               <tr>
                  <td class='row-index-col'>@(1 + Model.Items.IndexOf(listItem))</td>
                  <td><input type="text" asp-for="The(listItem).Name" asp-prefix="pcl" class="form-control" /></td>
                  <td class="actions"><button type="submit" name="Save" class="btn btn-secondary" formaction='@Url.ActionWithQuery("ProductCategoriesList/Save", item)'><i class="fas fa-save"></i>
                        Save</button></td>
                  <td class="actions"><a name="Edit" class="btn btn-secondary" href='@Url.Index("ProductCategoryEnter", new { item = item.ID })' target="$modal"><i class="fas fa-edit"></i>
                        Edit</a>
                     <button type="submit" name="Delete" class="btn-danger btn" formaction='@Url.ActionWithQuery("ProductCategoriesList/Delete", item)' data-confirm-question="Are you sure you want to delete this Product Category?"><i class="fas fa-times"></i>
                        Delete</button></td>
               </tr>
               ViewData.TemplateInfo.HtmlFieldPrefix = "";
               }
            </tbody>
            <tfoot>
               <tr>
                  <td class='row-index-col-footer'></td>
                  <td></td>
                  <td class="actions"></td>
                  <td class="actions"></td>
               </tr>
            </tfoot>
         </table>
      </div>
      <input type="hidden" name="pcl.p" id="pcl.p" value="@Model.Paging" />
      @Html.Pagination(Model.Paging, new { @class="pagination" })
   </text>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no product categories to display.
   </div>
   }
</form>
