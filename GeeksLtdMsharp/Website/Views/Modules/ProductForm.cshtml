@model ViewModel.ProductForm

<!-- Modules\Product\ProductForm.cs:8 -->
<form data-module="ProductForm" role="form" method="post" action="@Url.Current()" enctype="multipart/form-data" data-validation-style="tooltip" class="input-form">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <div class="buttons-row">
      <div class="buttons">
         <button type="button" name="Cancel" class="btn btn-secondary" data-confirm-question="are you sure you wanna cancel the proccess?" onclick="page.modal.closeMe();">Cancel</button>
         <button type="submit" name="Save" class="btn btn-primary" formaction='@Url.ActionWithQuery("ProductForm/Save")' default-button="true"><i class="fas fa-check"></i>
            Save</button>
      </div>
   </div>
   <h2>Product Details</h2>
   <div class="form-body">
      <div class="form-group row required-item">
         <label for="Name" class="control-label">
            Name
         </label>
         <div class="group-control">
            <input type="text" asp-for="Name" class="form-control" autofocus="autofocus" />
         </div>
      </div>
      <div class="form-group row required-item">
         <label for="ProductionDate_time" class="control-label">
            Production date/time
         </label>
         <div class="group-control">
            <div class="input-group">
               <input type="text" asp-for="ProductionDate_time" class="form-control" placeholder="dd/mm/yyyy" data-control="date-picker|time-picker" />
               <span class="input-group-addon">
                  <i title="pick a date" class="fa-calendar fa"></i>
               </span>
            </div>
         </div>
      </div>
      <fieldset>
         <div class="form-group row required-item">
            <legend for="IsFood" class="control-label normal">
               Type
            </legend>
            <div class="group-control">
               @Html.RadioButtonsFor(x => x.IsFood, Model.IsFood_Options, new { @class = "form-check-inline" })
            </div>
         </div>
      </fieldset>
      <div class="form-group row required-item">
         <label for="ProductWebsite" class="control-label">
            Product website
         </label>
         <div class="group-control">
            <textarea asp-for="ProductWebsite" class="form-control" rows="5"></textarea>
         </div>
      </div>
      <div class="form-group row required-item">
         <label for="Photo" class="control-label">
            Photo
         </label>
         <div class="group-control">
            @Html.FileUploadFor(x => x.Photo, new { accept = ".png,.jpeg,.jpg" })
         </div>
      </div>
      <div class="form-group row">
         <label for="ProductCategory" class="control-label">
            Categories
         </label>
         <div class="group-control">
            <select asp-for="ProductCategory" asp-items="@Model.ProductCategory_Options" class="form-control">
            </select>
         </div>
      </div>
   </div>
</form>
