@using Olive.Security

@model ViewModel.Header
@(Layout = null)

<!-- Modules\-Custom\Header.cs:8 -->
<form data-module="Header" method="post" action="@Url.Current()" class="header-wrapper">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <nav class="navbar">
      <div class="header-left-actions-wrapper">
         <a name="Burger" class="menu-toggler burger-icon" href="#" type="button"><i class="fas"></i></a>
         <a name="Logo" class="logo" href="~/"><img src="~/img/Logo.png" alt="Logo" /></a>
      </div>
      <div class="header-account-wrapper">
         @if (User.Identity.IsAuthenticated)
         {
         <a name="Logout" class="align-bottom logout" href="#" formaction='@Url.ActionWithQuery("Header/Logout")'>Logout</a>
         }
      </div>
   </nav>
   <div class="buttons-row">
      <div class="buttons">
         @if (User.IsInRole("Anonymous"))
         {
         <a name="Login" href='@Url.Index("Login")'><i class="fas fa-unlock-alt"></i>
            Login</a>
         }
      </div>
   </div>
</form>
