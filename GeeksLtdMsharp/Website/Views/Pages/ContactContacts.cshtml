@model ViewModel.ContactsList
<!-- Modules\Contact\ContactsList.cs:7 -->
<form data-module="ContactsList" method="get" action="@Url.Current()" data-redirect="ajax">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <input type="hidden" name="Current-Sort" id="Current-Sort" value="@Model.Sort" />
   <div class="buttons-row top-buttons-row">
      <div class="buttons">
         <a name="NewContact" class="btn btn-secondary" href='@Url.Index("ContactContactsEnter")' target="$modal"><i class="fas fa-plus"></i>
            New Contact</a>
      </div>
   </div>
   <h2>Contacts</h2>
   <div class="search">
      <div class="form-group row">
         <label for="FullSearch" class="control-label">
            Find
         </label>
         <div class="group-control">
            <input type="text" asp-for="FullSearch" class="form-control" placeholder="Search..." />
         </div>
      </div>
      <div class="buttons-row">
         <div class="buttons">
            <button type="submit" name="Search" class="btn btn-primary" default-button="true">Search</button>
         </div>
      </div>
   </div>
   @if (Model.Items.Any())
   {
   <text>
      <div class="grid-wrapper">
         <table class="grid">
            <thead>
               <tr>
                  <th data-sort="PhoneNumber"><a title="Sort by Phone number" aria-label="Sort by Phone number" href="@Model.Sort.Url("PhoneNumber")" data-redirect="ajax">Phone number</a></th>
                  <th class="actions-merge">Actions</th>
                  <th>Full Name</th>
               </tr>
            </thead>
            <tbody>
               @foreach (var listItem in Model.Items)
               {
               var item = listItem.Item;
               <tr>
                  <td>@item.PhoneNumber</td>
                  <td class="actions-merge"><a name="Edit" class="btn btn-secondary" href='@Url.Index("ContactContactsEnter", new { item = item.ID })' target="$modal"><i class="fas fa-edit"></i>
                        Edit</a>
                     <button type="submit" name="Delete" class="btn-danger btn" formaction='@Url.ActionWithQuery("ContactsList/Delete", item)' data-confirm-question="Are you sure you want to delete this Contact?"><i class="fas fa-times"></i>
                        Delete</button></td>
                  <td><a name="C_item_Name" href='@Url.Index("ContactView", new { item = item.Name })' data-redirect="ajax">@item.Name</a></td>
               </tr>
               }
            </tbody>
            <tfoot>
               <tr>
                  <td></td>
                  <td class="actions-merge"></td>
                  <td></td>
               </tr>
            </tfoot>
         </table>
      </div>
      <input type="hidden" name="p" id="p" value="@Model.Paging" />
      @Html.Pagination(Model.Paging, new { @class="pagination" })
   </text>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no contacts to display.
   </div>
   }
</form>
