@model ViewModel.AssetTypesList
<!-- Modules\AssetType\AssetTypesList.cs:7 -->
<form data-module="AssetTypesList" method="get" action="@Url.Current()" data-redirect="ajax">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <div class="buttons-row top-buttons-row">
      <div class="buttons">
         <a name="AddAssetType" class="btn btn-primary" href='@Url.Index("AssetTypeEnter", new { ReturnUrl = Url.Current() })' data-redirect="ajax" default-button="true"><i class="fas fa-plus"></i>
            Add Asset Type</a>
      </div>
   </div>
   <h2>Asset Types</h2>
   @if (Model.Items.Any())
   {
   <div class="grid-wrapper">
      <table class="grid">
         <thead>
            <tr>
               <th>Name</th>
               <th class="actions">Edit</th>
               <th class="actions">Delete</th>
            </tr>
         </thead>
         <tbody>
            @foreach (var listItem in Model.Items)
            {
            var item = listItem.Item;
            <tr>
               <td>@item.Name</td>
               <td class="actions"><a name="Edit" class="btn btn-secondary" href='@Url.Index("AssetTypeEnter", new { item = item.ID, ReturnUrl = Url.Current() })' data-redirect="ajax"><i class="fas fa-edit"></i>
                     Edit</a></td>
               <td class="actions"><button type="submit" name="Delete" class="btn-danger btn" formaction='@Url.ActionWithQuery("AssetTypesList/Delete", item)' data-confirm-question="Are you sure you want to delete this Asset Type?"><i class="fas fa-times"></i>
                     Delete</button></td>
            </tr>
            }
         </tbody>
      </table>
   </div>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no asset Types to display.
   </div>
   }
</form>
