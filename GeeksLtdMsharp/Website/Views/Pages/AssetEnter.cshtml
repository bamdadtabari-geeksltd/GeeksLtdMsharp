@model ViewModel.AssetForm
<!-- Modules\Asset\AssetForm.cs:7 -->
<form data-module="AssetForm" role="form" method="post" action="@Url.Current()" data-validation-style="tooltip" class="input-form">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <h2>Asset details</h2>
   <div class="form-body">
      <div class="form-group row">
         <label for="Code" class="control-label">
            Code
         </label>
         <div class="group-control">
            <input type="text" asp-for="Code" class="form-control" autofocus="autofocus" />
         </div>
      </div>
      <div class="form-group row">
         <label for="Name" class="control-label">
            Name
         </label>
         <div class="group-control">
            <input type="text" asp-for="Name" class="form-control" />
         </div>
      </div>
      <div class="form-group row">
         <label for="Type" class="control-label">
            Asset type
         </label>
         <div class="group-control">
            <select asp-for="Type" asp-items="@Model.Type_Options" class="form-control">
            </select>
         </div>
      </div>
      <div class="form-group row">
         <label for="Cost" class="control-label">
            Cost
         </label>
         <div class="group-control">
            <div class="input-group">
               <span class="input-group-addon">
                  £
               </span>
               <input type="text" asp-for="Cost" class="form-control" />
            </div>
         </div>
      </div>
      <div class="form-group row">
         <label for="Owner" class="control-label">
            Who is currently holding it?
         </label>
         <div class="group-control">
            <select asp-for="Owner" asp-items="@Model.Owner_Options" class="form-control">
            </select>
         </div>
      </div>
   </div>
   <div class="buttons-row">
      <div class="buttons">
         <button type="button" name="Cancel" class="btn btn-secondary" onclick="return page.goBack(this);" data-redirect="ajax">Cancel</button>
         <button type="submit" name="Save" class="btn btn-primary" formaction='@Url.ActionWithQuery("AssetForm/Save")' default-button="true"><i class="fas fa-check"></i>
            Save</button>
      </div>
   </div>
</form>
