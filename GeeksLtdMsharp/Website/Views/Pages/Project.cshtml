@model ViewModel.ProjectsList
<!-- Modules\Project\ProjectsList.cs:8 -->
<form data-module="ProjectsList" method="get" action="@Url.Current()" data-redirect="ajax">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <div class="buttons-row top-buttons-row">
      <div class="buttons">
         <a name="NewProject" class="btn btn-primary" href='@Url.Index("ProjectEnter")' target="$modal" default-button="true"><i class="fas fa-plus"></i>
            New project</a>
      </div>
   </div>
   <h2>Projects</h2>
   @if (Model.Items.Any())
   {
   <div class="grid-wrapper">
      <table class="grid">
         <thead>
            <tr>
               <th>Name</th>
               <th></th>
            </tr>
         </thead>
         <tbody>
            @foreach (var listItem in Model.Items)
            {
            var item = listItem.Item;
            <tr>
               <td>@item.Name</td>
               <td><a name="Edit" class="btn btn-secondary" href='@Url.Index("ProjectEdit", new { item = item.ID, ReturnUrl = Url.Current() })' data-redirect="ajax"><i class="fas fa-edit"></i>
                     Edit</a>
                  <button type="submit" name="Delete" class="btn-danger btn" formaction='@Url.ActionWithQuery("ProjectsList/Delete", item)' data-confirm-question="Are you sure you want to delete this Project?"><i class="fas fa-times"></i>
                     Delete</button></td>
            </tr>
            }
         </tbody>
      </table>
   </div>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no projects to display.
   </div>
   }
</form>
