@model ViewModel.AssetsList
<!-- Modules\Asset\AssetsList.cs:7 -->
<form data-module="AssetsList" method="get" action="@Url.Current()" data-redirect="ajax">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <div class="buttons-row top-buttons-row">
      <div class="buttons">
         <a name="AddAsset" class="btn btn-secondary" href='@Url.Index("AssetEnter", new { ReturnUrl = Url.Current() })' data-redirect="ajax"><i class="fas fa-plus"></i>
            Add Asset</a>
      </div>
   </div>
   <h2>Assets</h2>
   <div class="search">
      <div class="form-group row">
         <label for="Type" class="control-label">
            Type:
         </label>
         <div class="group-control">
            <select asp-for="Type" asp-items="@Model.Type_Options" class="form-control">
            </select>
         </div>
      </div>
      <div class="form-group row">
         <label for="FullSearch" class="control-label">
            Find:
         </label>
         <div class="group-control">
            <input type="text" asp-for="FullSearch" class="form-control" placeholder="Search..." />
         </div>
      </div>
      <div class="buttons-row">
         <div class="buttons">
            <button type="submit" name="Search" class="btn btn-primary" default-button="true">Search</button>
         </div>
      </div>
   </div>
   @if (Model.Items.Any())
   {
   <div class="grid-wrapper">
      <table class="grid">
         <thead>
            <tr>
               <th>View</th>
               <th>Code</th>
               <th>Name</th>
               <th>Asset type</th>
               <th>Cost</th>
               <th>Owner</th>
               <th class="actions">Edit</th>
               <th class="actions">Delete</th>
            </tr>
         </thead>
         <tbody>
            @foreach (var listItem in Model.Items)
            {
            var item = listItem.Item;
            <tr>
               <td><a name="View" class="btn btn-secondary" href='@Url.Index("AssetView", new { item = item.ID, ReturnUrl = Url.Current() })' data-redirect="ajax"><i class="fas fa-search-plus"></i>
                     View</a></td>
               <td>@item.Code</td>
               <td>@item.Name</td>
               <td>@item.Type</td>
               <td>@(string.Format("{0:c}", item.Cost))</td>
               <td>@item.Owner</td>
               <td class="actions"><a name="Edit" class="btn btn-secondary" href='@Url.Index("AssetEnter", new { item = item.ID, ReturnUrl = Url.Current() })' data-redirect="ajax"><i class="fas fa-edit"></i>
                     Edit</a></td>
               <td class="actions"><button type="submit" name="Delete" class="btn-danger btn" formaction='@Url.ActionWithQuery("AssetsList/Delete", item)' data-confirm-question="Are you sure you want to delete this Asset?"><i class="fas fa-times"></i>
                     Delete</button></td>
            </tr>
            }
         </tbody>
      </table>
   </div>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no assets to display.
   </div>
   }
</form>
