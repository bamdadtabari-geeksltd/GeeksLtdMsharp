@model ViewModel.ProductView
@{ Domain.Product item = Model.Item; }
<!-- Modules\Product\ProductView.cs:7 -->
<form data-module="ProductView" method="post" action="@Url.Current()">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <h2>@item.Name Details</h2>
   <div class="view-body">
      <div class="form-group row">
         <label class="control-label">
            Name
         </label>
         <div class="group-control">
            @item.Name
         </div>
      </div>
      <div class="form-group row">
         <label class="control-label">
            Is Food
         </label>
         <div class="group-control">
            @if (item.IsFood) {
            <i title="yes" class="fa-check fa"></i>
            }
         </div>
      </div>
      <div class="form-group row">
         <label class="control-label">
            Photo
         </label>
         <div class="group-control">
            @if (item.Photo.HasValue())
            {
            <img src='@item.Photo.Url()'/>
            }
         </div>
      </div>
   </div>
   <div class="buttons-row">
      <div class="buttons">
         <button type="button" name="Back" class="btn btn-primary" default-button="true" onclick="return page.goBack(this);" data-redirect="ajax"><i class="fas fa-chevron-left"></i>
            Back</button>
         <button type="submit" name="Delete" class="btn-danger btn" formaction='@Url.ActionWithQuery("ProductView/Delete")' data-confirm-question="Are you sure you want to delete this Product?"><i class="fas fa-times"></i>
            Delete</button>
      </div>
   </div>
</form>
