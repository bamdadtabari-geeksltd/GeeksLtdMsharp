@model ViewModel.ClientsList
<!-- Modules\Client\ClientsList.cs:7 -->
<form data-module="ClientsList" method="get" action="@Url.Current()" data-redirect="ajax">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <input type="hidden" name="Current-Sort" id="Current-Sort" value="@Model.Sort" />
   <div class="buttons-row top-buttons-row">
      <div class="buttons">
         <a name="AddClient" class="btn btn-primary" href='@Url.Index("ClientEnter", new { ReturnUrl = Url.Current() })' data-redirect="ajax" default-button="true"><i class="fas fa-plus"></i>
            Add client</a>
      </div>
   </div>
   <h2>Clients</h2>
   @if (Model.Items.Any())
   {
   <text>
      <div class="grid-wrapper">
         <table class="grid">
            <thead>
               <tr>
                  <th data-sort="Company"><a title="Sort by Company" aria-label="Sort by Company" href="@Model.Sort.Url("Company")" data-redirect="ajax">Company</a></th>
                  <th>Invoices</th>
                  <th></th>
                  <th class="actions">Edit</th>
                  <th class="actions">Delete</th>
               </tr>
            </thead>
            <tbody>
               @foreach (var listItem in Model.Items)
               {
               var item = listItem.Item;
               <tr>
                  <td>@item.Company</td>
                  <td>@(await item.Invoices.GetList().ToString(" | "))</td>
                  <td><a name="AddInvoice" href='@Url.Index("ClientAddInvoice", new { client = item.ID, ReturnUrl = Url.Current() })' data-redirect="ajax">Add Invoice</a></td>
                  <td class="actions"><a name="Edit" class="btn btn-secondary" href='@Url.Index("ClientEnter", new { item = item.ID, ReturnUrl = Url.Current() })' data-redirect="ajax"><i class="fas fa-edit"></i>
                        Edit</a></td>
                  <td class="actions"><button type="submit" name="Delete" class="btn-danger btn" formaction='@Url.ActionWithQuery("ClientsList/Delete", item)' data-confirm-question="Are you sure you want to delete this Client?"><i class="fas fa-times"></i>
                        Delete</button></td>
               </tr>
               }
            </tbody>
            <tfoot>
               <tr>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td class="actions"></td>
                  <td class="actions"></td>
               </tr>
            </tfoot>
         </table>
      </div>
      <input type="hidden" name="p" id="p" value="@Model.Paging" />
      @Html.Pagination(Model.Paging, new { @class="pagination" })
   </text>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no clients to display.
   </div>
   }
</form>
