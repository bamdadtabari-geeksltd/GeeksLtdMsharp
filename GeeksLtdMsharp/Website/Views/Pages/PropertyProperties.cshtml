@model ViewModel.PropertiesList
<!-- Modules\Property\PropertiesList.cs:7 -->
<form data-module="PropertiesList" method="post" action="@Url.Current()">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <input type="hidden" name="Current-Sort" id="Current-Sort" value="@Model.Sort" />
   <div class="buttons-row top-buttons-row">
      <div class="buttons">
         <a name="NewProperty" class="btn btn-secondary" href='@Url.Index("PropertyEnter")' target="$modal" data-modal-options='{"width": "1000px","height": "1000px"}'><i class="fas fa-plus"></i>
            New Property</a>
      </div>
   </div>
   <input type="hidden" name="s" id="s" value="@Model.Sort" />
   <h2>Properties</h2>
   <div class="search">
      <div class="form-group row">
         <label for="FullSearch" class="control-label">
            Find
         </label>
         <div class="group-control">
            <input type="text" asp-for="FullSearch" class="form-control" placeholder="Search..." />
         </div>
      </div>
      <div class="buttons-row">
         <div class="buttons">
            <button type="submit" name="Search" class="btn btn-primary" formaction='@Url.ActionWithQuery("PropertiesList/Search")' default-button="true">Search</button>
         </div>
      </div>
   </div>
   @if (Model.Items.Any())
   {
   <text>
      <div class="grid-wrapper">
         <table class="grid">
            <thead>
               <tr>
                  <th class='row-index-col'></th>
                  <th>Name</th>
                  <th data-sort="Price"><a title="Sort by Price" aria-label="Sort by Price" href="#" data-sort="Price" formaction="@Model.Sort.Url("Price")">Price</a></th>
                  <th class="actions">Actions</th>
               </tr>
            </thead>
            <tbody>
               @foreach (var listItem in Model.Items)
               {
               var item = listItem.Item;
               <tr>
                  <td class='row-index-col'>@(1 + Model.Items.IndexOf(listItem))</td>
                  <td><a name="C_item_Name" href='@Url.Index("PropertyView", new { item = item.ID, ReturnUrl = Url.Current() })' data-redirect="ajax">@item.Name</a></td>
                  <td>@(string.Format("{0:c}", item.Price))</td>
                  <td class="actions"><a name="Edit" class="btn btn-secondary" href='@Url.Index("PropertyEnter", new { item = item.ID })' target="$modal"><i class="fas fa-edit"></i>
                        Edit</a>
                     <button type="submit" name="Delete" class="btn-danger btn" formaction='@Url.ActionWithQuery("PropertiesList/Delete", item)' data-confirm-question="Are you sure you want to delete this Property?"><i class="fas fa-times"></i>
                        Delete</button></td>
               </tr>
               }
            </tbody>
            <tfoot>
               <tr>
                  <td class='row-index-col-footer'></td>
                  <td></td>
                  <td></td>
                  <td class="actions"></td>
               </tr>
            </tfoot>
         </table>
      </div>
      <input type="hidden" name="p" id="p" value="@Model.Paging" />
      @Html.Pagination(Model.Paging, new { @class="pagination" })
   </text>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no properties to display.
   </div>
   }
</form>
